{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-google_ad_conversion" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
   {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i>{{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-google-ad-conversion" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-conversion-id">{{ entry_conversion_id }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_google_ad_conversion_conversion_id" value="{{ module_google_ad_conversion_conversion_id }}" placeholder="{{ entry_conversion_id }}" id="input-conversion-id" class="form-control" />
              {% if error_conversion_id %}
              <div class="text-danger">{{ error_conversion_id }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-conversion-label">{{ entry_conversion_label }}</label>
            <div class="col-sm-10">
              <input type="text" name="module_google_ad_conversion_conversion_label" value="{{ module_google_ad_conversion_conversion_label }}" placeholder="{{ entry_conversion_label }}" id="input-conversion-label" class="form-control" />
              {% if error_conversion_label %}
              <div class="text-danger">{{ error_conversion_label }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_google_ad_conversion_status" id="input-status" class="form-control">
                {% if module_google_ad_conversion_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }} 