<div class="table-responsive">
  <table class="table table-bordered">
    <thead>
      <tr>
        <td class="text-left">{{ column_filename }}</td>
        <td class="text-left">{{ column_filesize }}</td>
      </tr>
    </thead>
    <tbody>
      {% if sitemaps %}
      {% for sitemap in sitemaps %}
      <tr>
        <td class="text-left">
            {% if sitemap.filesize > 50 %}
                <div class="label label-danger">{{ sitemap.filename }}</div>
            {% else %}
                <div class="label label-success">{{ sitemap.filename }}</div>
            {% endif %}
        </td>
        <td class="text-left">{{ sitemap.filesize }}{{ sitemap.conversion_type }}</td>
      </tr>
      {% endfor %}
      {% else %}
      <tr>
        <td class="text-center" colspan="3">{{ text_no_results }}</td>
      </tr>
      {% endif %}
    </tbody>
  </table>
</div>
<div class="row">
  <div class="col-sm-6 text-left">{{ pagination }}</div>
  <div class="col-sm-6 text-right">{{ results }}</div>
</div>