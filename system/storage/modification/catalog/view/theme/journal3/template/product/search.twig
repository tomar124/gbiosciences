            <script language="javascript">
            $(document).ready(function(){ 
                    $('.product-list-item').parent().addClass("infscrlintro"); 
                    $('#content').append('<input type="hidden" name="pagenext" id="pagenext" value="2" />'); 
                    $('#content').append('<div class="row"> <div id="infscrl_loader" style="text-align:center"></br><button class="btn" id="loadmore">View More Literature</button></div> </div>');
                    $('#content').append('<div class="row"> <div id="infscrl_loader1" style="text-align:center"></br><img src="catalog/view/theme/journal3/lib/imagezoom/loading.gif" /></div> </div>'); 
                    
                    $('#infscrl_loader1').hide();
                    
                    url = 'index.php?route=product/search/searchLiterature';

                    var search = $('#content input[name=\'search\']').prop('value');

                    if (search) {
                            url += '&search=' + encodeURIComponent(search);
                    }

                    var type = '{{type}}';

                    if(type) {
                        url += '&type=' + encodeURIComponent(type);
                    }

                    var technical = $('#content select[name=\'technical\']').prop('value');
                    if (technical) {
                            url += '&technical=' + encodeURIComponent(technical);
                    }
                    
                    $('body').on('click', '#loadmore', function() {
                                    var pagenext = parseInt($('#pagenext').val());
                                    $.ajax({
                                            url: url+'&page='+pagenext,
                                            dataType: 'html',
                                            beforeSend: function() {
                                                    var pagenext = parseInt($('#pagenext').val());
                                                    $('#pagenext').val(pagenext+1);
                                                    $('#infscrl_loader').hide(); 
                                                    $('#infscrl_loader1').show();
                                                    
                                            }, 
                                            success: function(html) {
                                                    var div = $('.product-list-item', $(html));
                                                    $('.infscrlintro').append(div);
                                                    $('#grid-view').trigger('click');
                                                    if(!div || 0 === div.length) {
                                                            $('#infscrl_loader1').html('<strong>No More Literature !!</strong>');
                                                    } else {
                                                            $('#infscrl_loader1').hide();
                                                            $('#infscrl_loader').show(); 
                                                    }
                                            }
                                    });
                                    });
            });
            </script> 
