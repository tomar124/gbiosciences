<form class="form-horizontal">
  <fieldset id="payment">
    <legend>{{ text_title }}</legend>
    <div class="form-group required">
      <label class="col-sm-2 control-label" for="input-po-number">{{ text_title }}</label>
      <div class="col-sm-10">
        <input type="text" name="po_number" value="" placeholder="{{ entry_po }}" id="input-po-number" class="form-control" />
        <div class="text-danger"></div>
      </div>
    </div>
  </fieldset>
</form>
<div class="buttons">
  <div class="pull-right">
    <input type="button" value="{{ button_confirm }}" id="button-confirm" class="btn btn-primary" data-loading-text="{{ text_loading }}" />
  </div>
</div>
<script type="text/javascript"><!--
$('#button-confirm').bind('click', function() {
	$.ajax({
		type: 'get',
		url: 'index.php?route=extension/payment/po/confirm',
                data: { po_number: $('input[name=\'po_number\']').val() },
                dataType: 'JSON',
		cache: false,
		beforeSend: function() {
			$('#quick-checkout-button-confirm').attr('disabled', false);
		},
		complete: function() {
			$('.alert-dismissible').remove();
			$('#quick-checkout-button-confirm').button('reset');
		},
		success: function(json) {
			if (json['error']) {
				alert(json['error']);
			}
		
			if (json['success']) {
				location = json['success'];
			}
		}
	});
});
//--></script>